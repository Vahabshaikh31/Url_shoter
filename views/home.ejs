<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #1e1e2f;
        color: #e0e0e0;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      h1 {
        color: #00bcd4;
        margin-bottom: 20px;
        font-size: 2.5em;
        text-align: center;
      }

      p {
        color: #9e9e9e;
        font-size: 1.1em;
        margin-bottom: 20px;
      }

      form {
        background: #2a2a3b;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        width: 300px;
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      label {
        color: #b0bec5;
        font-size: 1.1em;
      }

      input[type="text"] {
        padding: 10px;
        border: 1px solid #00bcd4;
        border-radius: 5px;
        background: #1e1e2f;
        color: #e0e0e0;
        font-size: 1em;
        outline: none;
        transition: border-color 0.3s;
      }

      input[type="text"]:focus {
        border-color: #03a9f4;
      }

      button {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: #00bcd4;
        color: #ffffff;
        font-size: 1.1em;
        cursor: pointer;
        transition: background 0.3s;
      }

      button:hover {
        background: #03a9f4;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background: #2a2a3b;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }

      th, td {
        padding: 10px;
        text-align: left;
        color: #e0e0e0;
      }

      th {
        background: #00bcd4;
        color: #ffffff;
      }

      tr:nth-child(even) {
        background: #1e1e2f;
      }

      tr:hover {
        background: #2a2a3b;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <p>URL Generated: http://localhost:8000/url/<%= id %></p>
    <% } %>

    <div>
      <form method="POST" action="/url">
        <label>Enter Your Original URL</label>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Generate</button>
      </form>
    </div>
    <div style="margin-top: 30px">
      <% if (locals.urls) { %>
      <table>
        <thead>
          <tr>
            <th>S. No</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
